<% layout("/layouts/boilerplate") %>

<body>
    <h1>All Listings</h1>
    <!-- <form method="GET" action="/listings/new">
        <button> Create New Listings</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(let listing of allListings){ %>
    <div class="card col" style="width: 20rem;">
        <img src="<%= listing.image %>" class="card-img-top" alt="listing_image"/>
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %>
        <br>
        &#x20B9 <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
        </h5>
          <p class="card-text"><%= listing.description %></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
      <% } %>
    </div>

