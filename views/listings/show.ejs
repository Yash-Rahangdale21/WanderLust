<% layout("/layouts/boilerplate") %>
<body>
    <h2> Listing Detail</h2>
    <ul>
        <li> <%= listing.title %></li>
        <li> <%= listing.description %></li>
        <li> &#x20B9 <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></li>

        <li> <%= listing.location %></li>
        <li> <%= listing.country %></li>
    </ul>
    <br/>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button>Delete this listings</button> 
        <br/>
    <br>    </form>
    <a href="/listings/<%= listing._id %>/edit">Editing this listings</a>

</body>
